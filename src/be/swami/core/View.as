/** * View package * * @author Jeroen Desloovere <info@jeroendesloovere.be> */package be.swami.core{	/**	 * Swami imports	 */	import be.swami.core.Controller;	import be.swami.core.Model;	/**	 * Other imports	 */	import flash.display.Sprite;	/**	 * View class	 *	 * Contains the visual elements the user interacts with.	 * There generally shouldn't be any functionality that resides within this part of our triage.	 */	public class View extends Sprite	{		// init core variables		private var model:Model;		private var controller:Controller;		/**		 * View		 *		 * @param Model model		 */		public function View(model:Model)		{			this.model = model;			controller = new Controller(this, model);		}	}}